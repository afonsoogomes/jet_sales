{
  "compilerOptions": {
    "baseUrl": "./src",
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@utils/*": ["shared/utils/*"],
      "@config/*": ["shared/config/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src"],
}
